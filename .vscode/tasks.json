{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "s/dev/finomics-mobile-backend/up.sh",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Start Expo App",
            "type": "shell",
            "command": "npx expo start",
            "options": {
                "cwd": "${workspaceFolder}/src/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Backend & Expo",
            "dependsOn": [
                "Start Backend",
                "Start Expo App"
            ],
            "runOptions": {
                "runOn": "default"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}